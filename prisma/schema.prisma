// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users Table
model User {
  id           String   @id @default(cuid())
  username     String   @unique
  email        String   @unique
  passwordHash String   @map("password_hash")
  fullName     String   @map("full_name")
  phone        String?
  address      String?
  idNumber     String?  @map("id_number")
  profileImage String?  @map("profile_image")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  orders        Order[]
  notifications Notification[]
  favorites     Favorite[]
  reviews       Review[]
  ownedProperties PropertyOwner[] @relation("PropertyOwnerUser")

  @@map("users")
}

// Property Owners Table
model PropertyOwner {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String
  userId    String?  @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  kosProperties KosProperty[]
  user          User? @relation("PropertyOwnerUser", fields: [userId], references: [id])

  @@map("property_owners")
}

// Cities Table
model City {
  id        String   @id @default(cuid())
  name      String   @unique
  image     String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  kosProperties KosProperty[]

  @@map("cities")
}

// Kos Properties Table
model KosProperty {
  id          String        @id @default(cuid())
  name        String
  location    String
  cityId      String        @map("city_id")
  address     String
  type        PropertyType
  capacity    String
  price       Float
  rating      Float         @default(0)
  image       String
  images      String[]
  description String?
  ownerId     String        @map("owner_id")
  status      PropertyStatus @default(ACTIVE)
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  // Relations
  city     City @relation(fields: [cityId], references: [id])
  owner    PropertyOwner @relation(fields: [ownerId], references: [id])
  rooms    Room[]
  rules    HouseRule[]
  facilities KosFacility[]
  orders   Order[]
  reviews  Review[]
  favorites Favorite[]

  @@map("kos_properties")
}

// Facilities Table
model Facility {
  id        String   @id @default(cuid())
  name      String
  icon      String
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  kosProperties KosFacility[]

  @@map("facilities")
}

// Kos Facilities Junction Table
model KosFacility {
  kosId      String @map("kos_id")
  facilityId String @map("facility_id")

  // Relations
  kosProperty KosProperty @relation(fields: [kosId], references: [id], onDelete: Cascade)
  facility    Facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)

  @@id([kosId, facilityId])
  @@map("kos_facilities")
}

// Rooms Table
model Room {
  id        String   @id @default(cuid())
  kosId     String   @map("kos_id")
  name      String
  image     String
  people    String
  size      String
  price     Float
  available Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  kosProperty KosProperty @relation(fields: [kosId], references: [id], onDelete: Cascade)
  orders      Order[]

  @@map("rooms")
}

// House Rules Table
model HouseRule {
  id        String   @id @default(cuid())
  kosId     String   @map("kos_id")
  rule      String
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  kosProperty KosProperty @relation(fields: [kosId], references: [id], onDelete: Cascade)

  @@map("house_rules")
}

// Orders Table
model Order {
  id            String       @id @default(cuid())
  orderNumber   String       @unique @map("order_number")
  userId        String       @map("user_id")
  kosId         String       @map("kos_id")
  roomId        String       @map("room_id")
  status        OrderStatus  @default(PENDING)
  statusText    String       @map("status_text")
  bookingDate   DateTime     @default(now()) @map("booking_date")
  checkIn       DateTime     @map("check_in")
  checkOut      DateTime     @map("check_out")
  duration      Int
  totalPrice    Float        @map("total_price")
  paymentMethod String       @map("payment_method")
  paymentStatus PaymentStatus @default(PENDING) @map("payment_status")
  transactionId String?      @map("transaction_id")
  specialRequest String?     @map("special_request")
  guestName     String       @map("guest_name")
  guestEmail    String       @map("guest_email")
  guestPhone    String       @map("guest_phone")
  guestAddress  String       @map("guest_address")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  // Relations
  user         User @relation(fields: [userId], references: [id])
  kosProperty  KosProperty @relation(fields: [kosId], references: [id])
  room         Room @relation(fields: [roomId], references: [id])
  priceBreakdown PriceBreakdown[]
  review       Review?

  @@map("orders")
}

// Price Breakdown Table
model PriceBreakdown {
  id       String       @id @default(cuid())
  orderId  String       @map("order_id")
  label    String
  amount   Float
  type     BreakdownType
  createdAt DateTime     @default(now()) @map("created_at")

  // Relations
  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("price_breakdown")
}

// Notifications Table
model Notification {
  id        String           @id @default(cuid())
  userId    String           @map("user_id")
  type      NotificationType
  title     String
  message   String
  read      Boolean          @default(false)
  icon      String?
  relatedId String?          @map("related_id")
  createdAt DateTime         @default(now()) @map("created_at")
  updatedAt DateTime         @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Favorites Table
model Favorite {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  kosId     String   @map("kos_id")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  kosProperty KosProperty @relation(fields: [kosId], references: [id], onDelete: Cascade)

  @@unique([userId, kosId])
  @@map("favorites")
}

// Reviews Table
model Review {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  kosId     String   @map("kos_id")
  orderId   String   @map("order_id")
  rating    Int
  comment   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user        User @relation(fields: [userId], references: [id])
  kosProperty KosProperty @relation(fields: [kosId], references: [id])
  order       Order @relation(fields: [orderId], references: [id])

  @@unique([orderId])
  @@map("reviews")
}

// Enums
enum PropertyType {
  FLATS
  VILLAS
  HOTELS
}

enum PropertyStatus {
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum NotificationType {
  BOOKING
  PROMOTION
  SYSTEM
}

enum BreakdownType {
  RENT
  SERVICE_FEE
  ADMIN_FEE
  DISCOUNT
}